# Symfony Production Environment Configuration
# Copy relevant values to .env.local for production deployment

###> symfony/framework-bundle ###
APP_ENV=prod
APP_DEBUG=false
# Generate a new random secret for production
APP_SECRET=CHANGE-THIS-TO-A-RANDOM-STRING-AT-LEAST-32-CHARACTERS-LONG
###< symfony/framework-bundle ###

###> doctrine/doctrine-bundle ###
# Use your production database credentials
DATABASE_URL="postgresql://username:password@postgres:5432/docvault?serverVersion=16&charset=utf8"
###< doctrine/doctrine-bundle ###

###> symfony/messenger ###
MESSENGER_TRANSPORT_DSN=redis://:secure_redis_password@redis:6379/messages
###< symfony/messenger ###

###> lexik/jwt-authentication-bundle ###
JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
# Generate a secure passphrase for production
JWT_PASSPHRASE=CHANGE-THIS-TO-A-SECURE-PASSPHRASE
###< lexik/jwt-authentication-bundle ###

# DocVault Production Configuration
REDIS_URL=redis://:secure_redis_password@redis:6379
MEILISEARCH_HOST=http://meilisearch:7700
MEILISEARCH_KEY=CHANGE-THIS-TO-A-SECURE-KEY
OCR_SERVICE_URL=http://ocr-service:8000

# File Upload Configuration
UPLOAD_MAX_SIZE=52428800
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,tiff,gif

# Document Storage
DOCUMENTS_STORAGE_PATH=/var/www/html/storage/documents
TEMP_STORAGE_PATH=/var/www/html/storage/temp

# Email Configuration (configure with your SMTP settings)
MAILER_DSN=smtp://user:pass@localhost:587

# Logging
LOG_LEVEL=warning

# Performance Settings
PHP_MEMORY_LIMIT=256M
MAX_EXECUTION_TIME=300

# Security Headers
TRUSTED_PROXIES=172.20.0.0/16
TRUSTED_HOSTS=your-domain.com